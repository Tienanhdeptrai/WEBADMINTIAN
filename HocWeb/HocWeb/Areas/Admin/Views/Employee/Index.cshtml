@model List<HocWeb.Models.EmployeeModels>
@{
    ViewBag.Title = "Quản lí nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}
@section header{

}
@section jsFooter{
    <script src="~/Assets/Admin/js/controller/empController.js"></script>
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="m-0 font-weight-bold text-primary">Danh sách nhân viên</h1>
    <div>
        <a class="btn btn-primary" href="/Admin/Employee/Create" style="width:200px;"> Thêm mới </a>
    </div>
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Name</th>
                                <th>Ảnh</th>
                                <th>Chức vụ</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>UserName</th>
                                <th>Name</th>
                                <th>Ảnh</th>
                                <th>Chức vụ</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                            <tr id="row_@item">
                                <td>@item.UserName</td>
                                <td>@item.FirstName @item.LastName</td>
                                <td align="center">
                                    <img src="@item.Avatar" alt="Ảnh đại diện" width="100px" height="100px" />
                                </td>
                                <td>@(item.Position == "1" ? "Nhân viên": item.Position == "2" ? "Quản trị viên" :"Quản lí")</td>
                                <td>@item.Phone </td>
                                <td>@item.Email </td>
                                <td><a href="#" class="btn-active" data-id="@item.EmployeeID">@( Convert.ToBoolean(item.Status) ? "Đang hoạt động" : "Đang khóa")</a></td>
                                <td>
                                    <a class="btn btn-primary" href="/Admin/Employee/Edit/@item.EmployeeID">Chi tiết</a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>