@model List<HocWeb.Models.CateProductModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}
@section header{

}
@section jsFooter{
    <script src="~/Assets/Admin/js/controller/CategoryController.js"></script>
}
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="m-0 font-weight-bold text-primary">Danh sách danh mục sản phẩm</h1>
    <div>
        <a class="btn btn-primary" href="/Admin/CateProduct/Create" style="width:200px"> Thêm mới </a>
    </div>
    <hr />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>

                                <th>Name</th>
                                <th>MetaTitle</th>
                                <th>Displayed</th>
                                <th>Descriptions</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>

                                <th>Name</th>
                                <th>MetaTitle</th>
                                <th>Displayed</th>
                                <th>Descriptions</th>
                                <th>Status</th>
                                <th>#</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr id="row_@item">
                                <td>@item.Name</td>
                                <td>@item.MetaTitle</td>
                                <td>@item.Displayed</td>
                                <td>@item.MetaDescription</td>
                                <td><a href="#" class="btn-active" data-id="@item.CateProductID">@(Convert.ToBoolean(item.Status) ? "Đang hoạt động" : "Đang khóa")</a></td>
                                <td>
                                    <a class="btn btn-success" href="/Admin/CateProduct/Edit/@item.CateProductID">Edit</a>
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.CateProductID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn thông báo này?",
                                           OnComplete = "$('#row_" + @item.CateProductID + "').remote()",
                                           OnSuccess = "window.location.reload()",
                                           HttpMethod = "Delete"
                                       }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
