@model HocWeb.Models.ProductModels

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}

@section header{

}
@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="container-fluid">
    <h1 class="m-0 font-weight-bold text-primary">Chỉnh sửa sản phẩm</h1>
    <div>
        <a class="btn btn-primary" href="/Admin/product/Index" style="width:200px;">Trở về</a>
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductID)
    @Html.HiddenFor(model => model.Image)
    <div class="form-group row">
        <div class="col-sm-5 mb-1 mb-sm-0">
            <p style="font-weight:bold; color:#000000;font-size:20px">Tên sản phẩm</p>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" }, @autofocus = "autofocus" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-5">
            <p style="font-weight:bold; color:#000000;font-size:20px">Bảo hành(tháng)</p>
            @Html.EditorFor(model => model.Warranty, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Warranty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-5 mb-1 mb-sm-0">
            <p style="font-weight:bold; color:#000000;font-size:20px">Tiêu đề</p>
            @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-5">
            <p style="font-weight:bold; color:#000000;font-size:20px">Nội dung </p>
            @Html.EditorFor(model => model.MetaDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 mb-1 mb-sm-0">
            <p style="font-weight:bold; color:#000000;font-size:20px">Giá sản phẩm</p>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            <p style="font-weight:bold; color:#000000;font-size:20px">Giá khuyến mãi</p>
            @Html.EditorFor(model => model.PromotionPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PromotionPrice, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            <p style="font-weight:bold; color:#000000;font-size:20px">Số lượng</p>
            @Html.EditorFor(model => model.Counts, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PromotionPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            <p style="font-weight:bold; color:#000000;font-size:20px">Danh mục sản phẩm</p>
            @Html.DropDownListFor(model => model.CategoryID, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            <p style="font-weight:bold; color:#000000;font-size:20px">Nhãn hàng</p>
            @Html.DropDownListFor(model => model.BrandID, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BrandID, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-3">
            <p style="font-weight:bold; color:#000000;font-size:20px">Trạng thái</p>
            @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Còn hàng", Value = "True" },
           new SelectListItem { Text = "Hết hàng", Value = "False" } }, new { @class = "form-control form-control-user" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 mb-1 mb-sm-0">
            <p style="font-weight:bold; color:#000000;font-size:20px">Nội dung</p>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3 mb-1 mb-sm-0">
            <p style="font-weight:bold; color:#000000;font-size:20px">Thêm hình ảnh</p>
            <input type="file" class="form-control" name="file" accept="image/*"  />
        </div>
        <div class="col-sm-3 mb-1 mb-sm-0">
            <img src="@Html.ValueFor(model => model.Image)" alt="Ảnh minh họa sản phẩm" width="150px" height="150px" />
        </div>
    </div>
    <div>
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.CreatedBy)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" style="width:100px;" />
        </div>
    </div>
</div>
}

