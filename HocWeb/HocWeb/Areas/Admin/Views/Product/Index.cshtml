                <div class="card-header py-3">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Tên hãng</th>
                                        <th>Tên danh mục</th>
                                        <th>Hình ảnh</th>
                                        <th>Giá</th>
                                        <th>Giá ưu đãi</th>
                                        <th>Số lượng</th>
                                        <th>Bảo hành</th>
                                        <th>Status</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count == 0)
                                    {
                                        <tr>
                                            <td colspan="6">
                                                <img src="~/Assets/Admin/img/empty.png" style="display:block;margin:0 auto" width="200px" height="200px" />
                                                <br />
                                                <p style="text-align:center">Không tìm thấy sản phẩm</p>
                                            </td>
                                        </tr>
                                    }
                                    @foreach (var item in Model)
                                    {
                                <tr id="row_@item.ProductID">
                                    <td>@item.Name</td>
                                    <td>@dao.GetBrandNameByID(item.BrandID)</td>
                                    <td>@dao.GetCateNameByID(item.CategoryID)</td>             
                                    <td align="center">
                                        <img src="@item.Image" alt="Ảnh minh họa sản phẩm" width="50px" height="50px" />
                                    </td>
                                    <td>@item.Price</td>
                                    <td>@item.PromotionPrice</td>
                                    <td>@item.Counts</td>
                                    <td>@item.Warranty</td>
                                    <td><a href="#" class="btn-productactive" data-id="@item.ProductID">@Html.Raw(Convert.ToBoolean(item.Status) ? "Còn hàng" : "Hết hàng")</a></td>
                                    <td>
                                        <a class="btn btn-success" href="~/Admin/Product/Edit/@item.ProductID">Sửa</a>
                                    </td>
                                </tr>

                                    }

                                </tbody>
                            </table>
